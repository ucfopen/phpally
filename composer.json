{
    "name": "ucfopen/phpally",
    "type": "library",
    "description": "PHP Accessibility (a11y) Testing Library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chuck Crandall",
            "email": "chuck@cidilabs.com"
        },
        {
            "name": "Ethan Finlay",
            "email": "ethan@cidilabs.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/taheralfayad/isitdescriptive.git"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.5.0",
        "kaltura/api-client-library": "^17.2",
        "ucfopen/isitdescriptive": "dev-main"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit tests --verbose"
    },
    "autoload": {
        "classmap": [
            "src/",
            "tests/"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    }
}
